<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" placeholder="Enter Blog title" name="blog[title]">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" placeholder="Enter Image Url" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <input  class="ui green basic big button" type="submit">
    </form>
</div>    
